<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <corners android:radius="5dp" />
    <!-- 间隔 -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" />
    <!-- 各方向的间隔 -->


    <!-- 大小 -->
    <size
        android:width="20dp"
        android:height="10dp" />
    <!-- 宽度和高度 -->

    <!-- 填充 -->
    <solid android:color="@android:color/white" />

    <!-- 描边 -->
    <stroke
        android:width="1dp"
        android:color="@android:color/darker_gray"
        />
</shape>
